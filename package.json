{
  "name": "backend-nodejs-timestamp",
  "version": "0.0.1",
  "main": "src/server.ts",
  "author": "Kent Louise Tonino",
  "repository": "https://github.com/kentlouisetonino/backend-nodejs-timestamp",
  "homepage": "https://github.com/kentlouisetonino/backend-nodejs-timestamp#readme",
  "scripts": {
    "build": "tsc --build",
    "start": "tsc --build && node ./dist/server.js",
    "dev": "nodemon --config nodemon.json ./src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"./**/*.{json, prettierrc}\"",
    "tests": "jest --watchAll --verbose --coverage --runInBand --no-cache"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.5",
    "@types/nodemon": "^1.19.2",
    "@types/prettier": "^3.0.0",
    "@types/superagent": "^4.1.18",
    "@types/supertest": "^2.0.12",
    "babel-jest": "^29.6.2",
    "cors": "^2.8.0",
    "dotenv": "^16.3.1",
    "express": "^4.12.4",
    "jest": "^29.6.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "superagent": "^8.0.9",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "<rootDir>/coverage/"
    ]
  }
}
